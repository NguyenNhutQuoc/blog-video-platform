{
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "lib": [
            "es2022"
        ],
        "outDir": "../../tmp/apps/api-server/build",
        "rootDir": "../..",
        "moduleResolution": "nodenext",
        "baseUrl": "./",
        "paths": {
            "@blog/shared/domain": [
                "libs/shared/domain/src/index.ts"
            ],
            "@blog/shared/ui-kit": [
                "libs/shared/ui-kit/src/index.ts"
            ],
            "@blog/shared/utils": [
                "libs/shared/utils/src/index.ts"
            ],
            "@blog/shared/data-access": [
                "libs/shared/data-access/src/index.ts"
            ],
            "@blog/backend/core": [
                "libs/backend/core/src/index.ts"
            ],
            "@blog/backend/infrastructure": [
                "libs/backend/infrastructure/src/index.ts"
            ]
        },
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "tsBuildInfoFile": "../../tmp/apps/api-server/build/tsconfig.tsbuildinfo",
        "types": [
            "node",
            "express"
        ],
        "moduleDetection": "force",
        "resolvePackageJsonExports": true,
        "resolvePackageJsonImports": true,
        "incremental": true,
        "useDefineForClassFields": true,
        "strictBuiltinIteratorReturn": true,
        "useUnknownInCatchVariables": true
    },
    "references": [
        {
            "path": "../../libs/backend/infrastructure"
        },
        {
            "path": "../../libs/backend/core"
        }
    ],
    "files": [
        "./src/app.ts",
        "./src/container.ts",
        "./src/main.ts",
        "./src/config/env.ts",
        "./src/config/index.ts",
        "./src/config/swagger.ts",
        "./src/middleware/auth.middleware.ts",
        "./src/middleware/error.middleware.ts",
        "./src/middleware/index.ts",
        "./src/middleware/logger.middleware.ts",
        "./src/middleware/rate-limit.middleware.ts",
        "./src/routes/auth.routes.ts",
        "./src/routes/follows.routes.ts",
        "./src/routes/index.ts",
        "./src/routes/posts.routes.ts",
        "./src/routes/types.ts",
        "./src/routes/users.routes.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
