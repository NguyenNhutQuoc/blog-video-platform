{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "importHelpers": true,
    "noImplicitOverride": true,
    "types": ["node"],
    "paths": {
      "@blog/shared/domain": ["../../shared/domain/src/index.ts"],
      "@blog/backend/core": ["../core/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../shared/domain/tsconfig.lib.json"
    },
    {
      "path": "../core/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
