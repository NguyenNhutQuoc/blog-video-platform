{
  "name": "video-worker",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/video-worker/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "tmp/apps/video-worker/build",
        "main": "apps/video-worker/src/main.ts",
        "tsConfig": "apps/video-worker/tsconfig.json",
        "format": ["esm"],
        "bundle": true,
        "platform": "node",
        "target": "node20",
        "minify": false,
        "skipTypeCheck": false,
        "external": ["bullmq", "ioredis", "pg", "pg-native"],
        "esbuildOptions": {
          "sourcemap": true
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx watch apps/video-worker/src/main.ts",
        "cwd": "."
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/video-worker/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/video-worker"],
      "options": {
        "jestConfig": "apps/video-worker/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:worker", "type:app"]
}
