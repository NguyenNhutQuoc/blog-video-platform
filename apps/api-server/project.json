{
  "name": "api-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api-server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "tmp/apps/api-server/build",
        "main": "apps/api-server/src/main.ts",
        "tsConfig": "apps/api-server/tsconfig.json",
        "rootDir": ".",
        "assets": []
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx watch apps/api-server/src/main.ts",
        "cwd": "."
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/api-server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/api-server"],
      "options": {
        "jestConfig": "apps/api-server/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:api", "type:app"]
}
