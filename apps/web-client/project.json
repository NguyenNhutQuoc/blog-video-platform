{
  "name": "@blog-video-platform/web-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web-client/src",
  "projectType": "application",
  "tags": ["scope:web", "type:app"],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "apps/web-client/.next"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/web-client"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@blog-video-platform/web-client:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "@blog-video-platform/web-client:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "@blog-video-platform/web-client:build:production",
          "dev": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/web-client/jest.config.ts"
      }
    }
  }
}
